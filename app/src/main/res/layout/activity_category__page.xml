<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_category__page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.metrowebz.data.quizforyou.Activity.Category_Page">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/menu_radial_bg"
        android:alpha="0.85"
        >
    </RelativeLayout>

    <ImageView
        android:layout_margin="15dp"
        android:id="@+id/noads"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/no_ads"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_margin="35dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logofinal"
        android:layout_centerHorizontal="true"
        android:elevation="7dp"
        android:shadowColor="@color/black"
        android:shadowDy="3"
        android:shadowDx="3"
        android:shadowRadius="5"
        />
    <Button
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/play_button"
        android:ems="10"
        android:paddingRight="40dp"
        android:drawableRight="@mipmap/play"
        android:text="Play"
        android:textSize="23sp"
        android:typeface="sans"
        android:background="@drawable/menu_button_lay"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo"
        android:shadowColor="@color/gray"
        android:shadowDy="2"
        android:shadowDx="2"
        android:textColor="@color/black"
        android:shadowRadius="3"/>

    <Button
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Setting"
        android:layout_centerHorizontal="true"
        android:textSize="23sp"
        android:ems="10"
        android:paddingRight="40dp"
        android:paddingEnd="40dp"
        android:drawableRight="@mipmap/setting"
        android:drawableEnd="@mipmap/setting"
        android:id="@+id/setting_but"
        android:background="@drawable/menu_button_lay"
        android:typeface="sans"
        android:layout_below="@+id/play_button"
        android:shadowColor="@color/gray"
        android:shadowDy="2"
        android:shadowDx="2"
        android:shadowRadius="3"
        android:layout_margin="30dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:text="Share"
        android:paddingRight="40dp"
        android:paddingEnd="40dp"
        android:typeface="sans"
        android:textSize="23sp"
        android:drawableRight="@mipmap/share"
        android:drawableEnd="@mipmap/share"
        android:id="@+id/share_button"
        android:layout_below="@+id/setting_but"
        android:background="@drawable/menu_button_lay"
        android:ems="10"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:shadowColor="@color/gray"
        android:shadowDy="2"
        android:shadowDx="2"
        android:shadowRadius="3"/>

    <com.google.android.gms.ads.AdView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/banner_id"
        ads:adSize="BANNER"
        ads:adUnitId="@string/Banner_id_bottom"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
